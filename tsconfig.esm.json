{
  "extends": "@paulmillr/jsbt/tsconfig.esm.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "esm",
    "module": "es2020",
    "moduleResolution": "bundler",
    "noImplicitReturns": false,
    "sourceMap": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
